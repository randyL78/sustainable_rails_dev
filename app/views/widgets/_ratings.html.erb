<%# locals: %>
<%#   widget: expected to be a Widget to rate %>
<%#   suppress_cta: (optional) if true, will hide the call to action. %>
<%#                 defaults to false %>
<section>
  <div class="clear-floats">
    <h3 style="float: left; margin: 0; padding-right: 1rem;">Rate This Widget</h3>

    <ol style="list-style: none; padding: 0; margin: 0;">
      <% (1..5).each do |rating| %>
        <li style="float: left;">
          <%= button_to rating,
                        widget_ratings_path,
                        params: {
                          widget_id: widget.id,
                          rating: rating
                        }%>
        </li>
      <% end %>
    </ol>
  </div>
  <% if !local_assigns[:suppress_cta] %>
    <p>Your ratings help us be amazing!</p>
  <% end %>
</section>